os: mac
-
# Snap to half-screen
snap left: key(ctrl-alt-left)
snap right: key(ctrl-alt-right)
snap up: key(ctrl-alt-up)
snap down: key(ctrl-alt-down)

# Snap to quarter screen
snap top left: key(ctrl-alt-u)
snap top right: key(ctrl-alt-i)
snap bottom left: key(ctrl-alt-j)
snap bottom right: key(ctrl-alt-k)

# Other snaps
snap center: key(ctrl-alt-c)
snap all: key(ctrl-alt-m)
snap full screen: key(cmd-ctrl-f)